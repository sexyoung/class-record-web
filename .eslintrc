{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "react-app-env.d.ts"
  ],
  "rules": {
    "semi": "error",
    "no-extra-semi": "error",
    "indent": ["error", 2],
    "no-trailing-spaces": "error",
    "space-before-blocks": "error",
    "prefer-const": "error",
    "no-var": "error",
    "react/self-closing-comp": "error",
    "spaced-comment": ["error", "always", { "block": { "balanced": true } }],
    "@typescript-eslint/no-use-before-define": "off"
  }
}